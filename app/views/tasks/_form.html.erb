<%= form_with(model: @task, local: true) do |f| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label "タスク名" %>
    <%= f.text_field :task_name %><br>
    <%= f.label "詳細" %>
    <%= f.text_field :task_description %><br>
    <%= f.label "終了期限" %>
    <%= f.text_field :due_date %><br>
    <%= f.submit "タスクを作成"%><br><br>
  </div>
<% end %>
